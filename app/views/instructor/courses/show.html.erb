<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <br />
  <div class="text-center">
    <%=image_tag current_course.image, class: "course_image img_responsive"%>
  </div>
  <br />
  <%= link_to 'Preview As Student', course_path(current_course), class: 'btn btn-warning btn-lg pull-right'%>
  <br class="clr" />
  <br />
  <div class="text-center">
    <%= link_to "Add new section", new_instructor_course_section_path(current_course), class: "btn btn-success btn-lg" %>
  </div>

  <br />

  <ul>
    <% current_course.sections.each do |section| %>
    <li>
      <%= section.title %>
      <%= link_to "Add new lesson", new_instructor_section_lesson_path(section), class: "pull-right btn btn-success btn-xs" %>
      <ul>
        <% section.lessons.rank(:row_order).each do |lesson| %>
        <li>
          <b><%=lesson.title%></b>
          -
          <%=lesson.subtitle%>
        </li>
        <%end%>
      </ul>

      <br class="clr" />
      <br />
    </li>
    <%end%>
  </ul>
</div>
